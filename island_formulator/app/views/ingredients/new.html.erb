<% content_for :title, "New Ingredient" %>

<div class="mx-auto w-full max-w-3xl px-5 py-10">
  <div class="mb-8 flex items-start justify-between gap-4">
    <div>
      <p class="text-sm font-semibold tracking-wide text-emerald-900/80 uppercase">
        Ingredient Tracker
      </p>
      <h1 class="mt-2 text-4xl font-extrabold text-emerald-950">
        Add a New Ingredient
      </h1>
      <p class="mt-2 text-sm text-stone-600">
        Capture the essentials—name, category, and any notes for your “natural lab.”
      </p>
    </div>

    <%= link_to "Back",
      ingredients_path,
      class: "inline-flex items-center justify-center rounded-md border border-amber-200 bg-white px-4 py-2 text-sm font-semibold text-stone-700 hover:bg-amber-50" %>
  </div>

  <%= render "form", ingredient: @ingredient %>
</div>
