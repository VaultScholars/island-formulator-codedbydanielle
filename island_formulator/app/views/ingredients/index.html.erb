<% content_for :title, "Ingredients" %>

<div class="container mx-auto mt-10 px-5">
  <div class="flex justify-between items-center mb-10">
    <h1 class="text-4xl font-extrabold text-emerald-950">
      My Ingredient Shelf
    </h1>

    <%= link_to "Add New Ingredient", new_ingredient_path,
      class: "bg-emerald-900 hover:bg-emerald-800 text-rose-50 font-bold py-3 px-6 rounded-lg shadow-md transition duration-200" %>
  </div>

  <div id="ingredients" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
    <% @ingredients.each do |ingredient| %>
      <div class="bg-white/90 shadow-lg rounded-xl p-6 border border-amber-100 hover:shadow-xl transition-shadow duration-300">
        
        <div class="mb-4">
          <span class="inline-block px-3 py-1 text-xs font-semibold tracking-wide uppercase rounded-full
                       bg-emerald-100 text-emerald-900 border border-emerald-200">
            <%= ingredient.category %>
          </span>
        </div>

        <h2 class="text-xl font-bold text-emerald-950 mb-2">
          <%= ingredient.name %>
        </h2>

        <p class="text-stone-700 line-clamp-3 mb-4">
          <%= ingredient.description %>
        </p>
        
        <div class="mt-auto pt-4 border-t border-amber-100 flex justify-between items-center">
          <%= link_to "View Details", ingredient,
            class: "text-emerald-700 font-medium hover:text-emerald-900 transition-colors" %>

          <span class="text-stone-400 text-sm">
            #<%= ingredient.id %>
          </span>
        </div>
      </div>
    <% end %>
  </div>
</div>
