<% content_for :title, "Showing ingredient" %>

<div class="mx-auto w-full max-w-3xl px-5 py-10">
  <div class="rounded-2xl border border-amber-100 bg-white shadow-sm overflow-hidden">

    <% if @ingredient.photo.attached? %>
      <%= image_tag @ingredient.photo,
        class: "w-full h-72 object-cover" %>
    <% else %>
      <div class="w-full h-72 bg-rose-50/60 flex items-center justify-center text-stone-400 text-sm">
        No photo uploaded
      </div>
    <% end %>

    <div class="p-8">
      <!-- Header -->
      <h1 class="text-4xl font-extrabold text-emerald-950 mb-3">
        <%= @ingredient.name %>
      </h1>

      <span class="inline-block bg-emerald-100 text-emerald-900 text-xs px-3 py-1 rounded-full font-semibold uppercase tracking-wide border border-emerald-200">
        <%= @ingredient.category %>
      </span>

      <!-- Description -->
      <div class="mt-8">
        <h2 class="text-xs font-semibold tracking-wide text-emerald-900/70 uppercase mb-3">
          Description
        </h2>

        <p class="text-stone-700 leading-relaxed">
          <%= @ingredient.description.presence || "No description added yet." %>
        </p>
      </div>

      <!-- Notes (optional but fits your system nicely) -->
      <% if @ingredient.notes.present? %>
        <div class="mt-8">
          <h2 class="text-xs font-semibold tracking-wide text-emerald-900/70 uppercase mb-3">
            Notes
          </h2>

          <p class="text-stone-700 leading-relaxed">
            <%= @ingredient.notes %>
          </p>
        </div>
      <% end %>

    <!-- Actions -->
      <div class="mt-10 pt-6 border-t border-amber-100 flex items-center justify-between">
        <%= link_to "Back",
          ingredients_path,
          class: "inline-flex items-center justify-center rounded-md border border-amber-200 bg-white px-4 py-2 text-sm font-semibold text-stone-700 hover:bg-amber-50 transition" %>

        <%= link_to "Edit Ingredient",
          edit_ingredient_path(@ingredient),
          class: "inline-flex items-center justify-center rounded-md bg-emerald-900 px-5 py-2 text-sm font-semibold text-rose-50 shadow-sm hover:bg-emerald-800 focus:outline-none focus:ring-2 focus:ring-emerald-700/40 transition" %>
      </div>
    </div>
  </div>
</div>
