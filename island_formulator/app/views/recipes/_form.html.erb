<%= form_with(model: recipe, class: "space-y-6") do |form| %>
  <% if recipe.errors.any? %>
    <div id="error_explanation"
         class="rounded-xl border border-rose-200 bg-rose-50 px-4 py-3 text-rose-900">
      <div class="flex items-start gap-3">
        <div class="mt-0.5 h-2.5 w-2.5 rounded-full bg-rose-500"></div>
        <div>
          <h2 class="font-semibold">
            <%= pluralize(recipe.errors.count, "error") %> prohibited this recipe from being saved:
          </h2>
          <ul class="mt-2 list-disc pl-5 text-sm text-rose-800">
            <% recipe.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  <% end %>

  <div class="rounded-2xl border border-amber-100 bg-rose-50/40 p-6 shadow-sm">
    <div class="grid grid-cols-1 gap-6">

  <!-- Photo -->
  <div class="bg-white shadow p-6 rounded-lg">
    <%= form.label :photo, "Recipe Photo", class: "block font-bold text-gray-700 mb-2" %>
    <div class="flex items-center justify-center w-full">
      <label class="flex flex-col items-center justify-center w-full h-32 border-2 border-gray-300 border-dashed rounded-lg cursor-pointer bg-gray-50 hover:bg-gray-100">
        <div class="flex flex-col items-center justify-center pt-5 pb-6">
          <svg class="w-8 h-8 mb-4 text-gray-500" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 16">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 13h3a3 3 0 0 0 0-6h-.025A5.56 5.56 0 0 0 16 6.5 5.5 5.5 0 0 0 5.207 5.021C5.137 5.017 5.071 5 5 5a4 4 0 0 0 0 8h2.167M10 15V6m0 0L8 8m2-2 2 2"/>
          </svg>
          <p class="mb-2 text-sm text-gray-500"><span class="font-semibold">Click to upload</span> or drag and drop</p>
          <p class="text-xs text-gray-500">PNG, JPG or GIF</p>
        </div>
        <%= form.file_field :photo, accept: "image/*", class: "hidden" %>
      </label>
    </div>
    <% if recipe.photo.attached? %>
      <p class="mt-2 text-sm text-green-600">✓ Current photo: <%= recipe.photo.filename %></p>
    <% end %>
  </div>

      <!-- Title -->
      <div>
        <%= form.label :title, class: "block text-sm font-semibold text-emerald-950" %>
        <%= form.text_field :title,
          placeholder: "e.g., Coconut Hair Mask",
          class: [
            "mt-2 block w-full rounded-md border bg-white/80 px-3 py-2 shadow-sm",
            "placeholder:text-stone-400",
            "focus:outline-none focus:ring-2 focus:ring-emerald-700/30 focus:border-emerald-700",
            recipe.errors[:title].any? ? "border-rose-300 focus:border-rose-500 focus:ring-rose-500/30" : "border-amber-100"
          ] %>
        <p class="mt-2 text-xs text-stone-600">Use a clear name you’ll recognize later.</p>
      </div>

      <!-- Product Type -->
      <div>
        <%= form.label :product_type, "Product Type", class: "block text-sm font-semibold text-emerald-950" %>
        <%= form.text_field :product_type,
          placeholder: "Hair Oil, Body Butter, Leave-in, Scrub…",
          class: [
            "mt-2 block w-full rounded-md border bg-white/80 px-3 py-2 shadow-sm",
            "placeholder:text-stone-400",
            "focus:outline-none focus:ring-2 focus:ring-emerald-700/30 focus:border-emerald-700",
            recipe.errors[:product_type].any? ? "border-rose-300 focus:border-rose-500 focus:ring-rose-500/30" : "border-amber-100"
          ] %>
        <p class="mt-2 text-xs text-stone-600">This helps you organize recipes by type.</p>
      </div>

      <!-- Method -->
      <div>
        <%= form.label :method, class: "block text-sm font-semibold text-emerald-950" %>
        <%= form.textarea :method,
          rows: 6,
          placeholder: "Write step-by-step instructions…",
          class: [
            "mt-2 block w-full rounded-md border bg-white/80 px-3 py-2 shadow-sm",
            "placeholder:text-stone-400",
            "focus:outline-none focus:ring-2 focus:ring-emerald-700/30 focus:border-emerald-700",
            recipe.errors[:method].any? ? "border-rose-300 focus:border-rose-500 focus:ring-rose-500/30" : "border-amber-100"
          ] %>
      </div>

      <!-- Ingredients (Nested) -->
      <div class="pt-2">
        <h3 class="text-sm font-semibold text-emerald-950 mb-1">Ingredients</h3>
        <p class="text-xs text-stone-600 mb-3">
          Select ingredients and add the amount needed (e.g., 50g, 2 tbsp).
        </p>

        <div class="space-y-3">
          <%= form.fields_for :recipe_ingredients do |ri_form| %>
            <div class="rounded-2xl border border-amber-200 bg-white/80 p-4 shadow-sm">
              <div class="grid grid-cols-1 md:grid-cols-3 gap-4 md:items-end">

                <!-- Ingredient select -->
                <div class="md:col-span-2">
                  <%= ri_form.label :ingredient_id, "Ingredient", class: "block text-sm font-semibold text-emerald-950" %>
                  <%= ri_form.collection_select :ingredient_id,
                        Ingredient.order(:name),
                        :id,
                        :name,
                        { prompt: "Select Ingredient" },
                        { class: "mt-2 block w-full rounded-md border border-amber-100 bg-white/80 px-3 py-2 shadow-sm focus:outline-none focus:ring-2 focus:ring-emerald-700/30 focus:border-emerald-700" } %>
                </div>

                <!-- Quantity -->
                <div>
                  <%= ri_form.label :quantity, "Amount", class: "block text-sm font-semibold text-emerald-950" %>
                  <%= ri_form.text_field :quantity,
                        placeholder: "e.g., 50g",
                        class: "mt-2 block w-full rounded-md border border-amber-100 bg-white/80 px-3 py-2 shadow-sm placeholder:text-stone-400 focus:outline-none focus:ring-2 focus:ring-emerald-700/30 focus:border-emerald-700" %>
                </div>
              </div>

              <%# Only show remove checkbox when editing an existing recipe_ingredient %>
              <% if ri_form.object.persisted? %>
                <div class="mt-3 flex items-center gap-2">
                  <%= ri_form.check_box :_destroy,
                        class: "h-4 w-4 rounded border-gray-300 text-rose-600 focus:ring-rose-500" %>
                  <%= ri_form.label :_destroy, "Remove",
                        class: "text-sm font-semibold text-rose-700" %>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>

    </div>

    <!-- Footer row: tip + buttons -->
    <div class="mt-6 flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between">
      <p class="text-xs text-stone-600">
        Tip: Keep ingredient amounts consistent (g/ml/tbsp) so recipes are easier to repeat.
      </p>

      <div class="flex gap-3">
        <%= link_to "Cancel", recipes_path,
          class: "inline-flex items-center justify-center rounded-md border border-amber-200 bg-white px-4 py-2 text-sm font-semibold text-stone-700 hover:bg-amber-50" %>

        <%= form.submit(
          recipe.persisted? ? "Update Recipe" : "Create Recipe",
          class: "inline-flex items-center justify-center rounded-md bg-emerald-900 px-5 py-2 text-sm font-semibold text-rose-50 shadow-sm hover:bg-emerald-800 focus:outline-none focus:ring-2 focus:ring-emerald-700/40"
        ) %>
      </div>
    </div>
  </div>
<% end %>